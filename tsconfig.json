{
  "compilerOptions": {    
    "types":["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "baseUrl": "./",
    "paths" : {"/*": ["src/*"]},
    "typeRoots": ["node_modules/@types/", "src/@types"],
    "rootDirs": ["./src"],
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "allowJs": false,
    "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019", "es2020"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}